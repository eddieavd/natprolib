                > * )
        : _base( _alloc_ )
{
        size_type count = static_cast< size_type >( npl::distance( _first_, _last_ ) );

        if( count > 0 )
        {
                _vallocate( count );
                _construct_at_end( _first_, _last_, count );
        }
}

