vector< T, Allocator >::vector ( size_type const _width_, size_type const _height_, enable_2d_container_base_t< U > * _store_ )
{
        if( _width_ > 0 && _height_ > 0 )
        {
                _vallocate( _height_ );

                for( size_type i = 0; i < _height_; ++i )
                {
                        _construct_one_at_end( 1, _store_ + i * _width_ );
                }
        }
